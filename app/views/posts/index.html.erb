<h1 id="page_title">오픈소스 활동</h1>

<div id="posts_wrapper" class="skinny_wrapper">
	<% @posts.each do |post| %>
		<%# 제목이 "Resume with Markdown"인 포스트는 목록에 보여주지 않는다. %>
		<% if post.title == "Resume with Markdown" %>
		<% next %>
		<% end %>
		<div class="post">
			<%# 작성일을 기준으로 얼마나 지났는지 확인하여 보여준다. %>
			<p class="date"><%= post.created_at.strftime('%A, %B %d') %></p>
			<h2><a href="#"><%= link_to post.title, post %></a></h2>
			<hr>
		</div>
	<% end %>

	<%# 로그인한 사람만 새로운 포스팅을 할 수 있다. %>
	<% if user_signed_in? %>
		<div id="admin_links">
			<%= link_to "새로운 포스팅 하기", new_post_path %>
		</div>
	<% end %>
</div>

<%# pagination function %>
<%= will_paginate @posts %>