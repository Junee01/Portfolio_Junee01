<%= form_for @post, html: { multipart: true } do |f| %>
	<% if @post.errors.any? %>
		<h2><%= pluralize(@post.errors.count, "error") %> prevented this post from saving: </h2>
		<ul>
			<% @post.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
			<% end %>
		</ul>
	<% end %>

	<%= f.label :title, "이름" %><br>
	<%= f.text_field :title, :placeholder => "포스트 제목을 입력해주세요." %>

	<br><br>

	<%= f.label :content, "내용" %><br>
	<%= f.text_area :content, :placeholder => "포스트할 내용을 입력해주세요." %>

	<br><br>

	<%# 이미지 넣는 부분입니다. %>
 	<%= f.file_field :image %>

 	<br><br><br>

	<%= f.submit "포스팅 생성" %>



<% end %>