<h1 id="page_title">로그인 하기</h1>

<div class="skinny_wrapper wrapper_padding">

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :email, "이메일" %><br />
      <%= f.email_field :email, autofocus: true, :placeholder => "이메일을 입력해주세요." %>
    </div>

    <div class="field">
      <%= f.label :password, "비밀번호" %><br />
      <%= f.password_field :password, autocomplete: "off", :placeholder => "비밀번호는 암호화되어 보여집니다." %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end -%>

    <br>

    <div class="actions">
      <%= f.submit "로그인 하기" %>
    </div>
  <% end %>

</div>