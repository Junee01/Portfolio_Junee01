<div id="post_show_content" class="skinny_wrapper wrapper_padding">
	<header>
		<p class="date"><%= @project.created_at.strftime('%A, %B %d') %></p>
		<h2><%= @project.title %></h2>
		<hr>
	</header>

	<div id="content">

		<%# 프로젝트에 관한 이미지 %>
		<%# 만약에 이미지가 없다면 넘어가고, 있다면 보여줍니다. %>
		<div class="content_image">
			<% if @project.image.file? %>
				<%= image_tag @project.image.url %>
				<hr>
			<% else %>
				<%# skip %>
			<% end %>
		</div>
		

		<%# 프로젝트에 관한 내용을 기술하는 부분 %>
		<%= markdown @project.description %>

		<%# 프로젝트와 연결된 링크를 기술하는 부분 %>
		<div class="button_wrapper">
			<a href="<%= @project.link %>" class="project_button" target="_blank">
				'<%= @project.title %>' (으)로 방문하기
			</a>
		</div>
	</div>

	<%# 로그인을 한 유저에게만 수정과 삭제의 권한이 주어집니다. %>
	<% if user_signed_in? %>
		<div id="admin_links">
			<%= link_to "프로젝트 추가", new_project_path %>
			<%= link_to "수정하기", edit_project_path(@project) %>
			<%= link_to "삭제하기", project_path(@project), method: :delete, data: { confirm: "Are you sure?" } %>
		</div>
	<% end %>

	<hr>

	<div id="share_box">
		<p>공유하기</p>
		<!-- Twitter 으로 공유하기 -->
		<a onclick="javascript:window.open('http://twitter.com/share?text=<%= @post.title %> by @sangjunpark - &amp;url=<%= url_for([@post, {only_path: false}]) %>', '_blank', 'width=800, height=500, top=200, left=300');void(0);"><i class="fa fa-twitter"></i></a>
		<!-- Facebook 으로 공유하기 -->
	    <a onclick="javascript:window.open('http://www.facebook.com/sharer.php?u=<%= url_for([@post, {only_path: false}]) %>', '_blank', 'width=800, height=500, top=200, left=300');void(0);"><i class="fa fa-facebook"></i></a>
	</div>

	<hr>

		<%= render 'disqus' %>
		
</div>