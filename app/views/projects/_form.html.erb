<%= form_for @project do |f| %>
	<% if @project.errors.any? %>
		<h2><%= pluralize(@project.errors.count, "error") %> prevented this project from saving: </h2>
		<ul>
			<% @project.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
			<% end %>
		</ul>
	<% end %>

	<%= f.label :title, "Project Name" %><br>
	<%= f.text_field :title, :placeholder => "Please enter the title" %>

	<br><br>

	<%= f.label :description, "Project description" %><br>
	<%= f.text_area :description, :placeholder => "Please enter the description" %>

	<br><br>

	<%# 이미지 넣는 부분입니다. %>
 	<%= f.file_field :image %>

	<br><br>

	<%= f.label :link, "Project link" %><br>
	<%= f.text_field :link, :placeholder => "Please enter the links" %>

	<br><br>

	<%= f.submit %>

<% end %>