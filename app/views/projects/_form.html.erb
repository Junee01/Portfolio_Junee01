<%= form_for @project, url: users_path, html: { multipart: true } do |f| %>
	<% if @project.errors.any? %>
		<h2><%= pluralize(@project.errors.count, "error") %> prevented this project from saving: </h2>
		<ul>
			<% @project.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
			<% end %>
		</ul>
	<% end %>

	<%= f.label :title, "프로젝트 주제" %><br>
	<%= f.text_field :title, :placeholder => "프로젝트 주제를 입력해주세요." %>

	<br><br>

	<%= f.label :description, "프로젝트 설명" %><br>
	<%= f.text_area :description, :placeholder => "프로젝트에 대한 설명을 기술해주세요." %>

	<br><br>

	<%= f.label :link, "프로젝트 링크(GitHub)" %><br>
	<%= f.text_field :link, :placeholder => "프로젝트에 대한 내용을 볼 수 있는 링크를 입력해주세요." %>

	<br><br>

	<%# 이미지 넣는 부분입니다. %>
 	<%= f.file_field :image %>

 	<br><br><br>

	<%= f.submit "프로젝트 생성" %>

<% end %>